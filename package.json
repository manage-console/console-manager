{
  "name": "console-log-remover",
  "displayName": "Console Log Remover",
  "description": "Remove console.log statements from your code",
  "version": "0.0.1",
  "icon": "images/icon.svg",
  "engines": { 
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.removeConsoleLogsAll",
    "onCommand:extension.removeConsoleLogsCurrent"
  ],
  "main": "./out/extension.js",
  "contributes": {
  "commands": [
  {
    "command": "extension.removeConsoleLogsAll",
    "title": "Remove console.log from All Project Files"
  },
  {
    "command": "extension.removeConsoleLogsCurrent",
    "title": "Remove console.log from Current File"
  }
]
,
    "configuration": {
      "title": "Console Log Remover",
      "properties": {
        "consoleLogRemover.includedExtensions": {
          "type": "array",
          "default": [".js", ".ts", ".jsx", ".tsx"],
          "description": "File extensions to include for console.log removal"
        },
        "consoleLogRemover.excludedFolders": {
          "type": "array",
          "default": ["node_modules", "dist", "build", ".git"],
          "description": "Folders to exclude from console.log removal"
        },
        "consoleLogRemover.excludedFiles": {
          "type": "array",
          "default": ["config.js", "config.json", "package.json", "package-lock.json"],
          "description": "Files to exclude from console.log removal"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "typescript": "^4.2.4"
  }
}
